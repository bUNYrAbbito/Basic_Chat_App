        </form>

        <br>

        <div class="chat-container">
            <% if (chats.length > 0) { %>
                <% chats.forEach(chat => { %>
                    <div class="chat <%= chat.from === 'You' ? 'sender' : 'receiver' %>">
                        <p><strong>From:</strong> <%= chat.from %></p>
                        <p class="message"><%= chat.msg %>
                        <form method="GET" action="/chats/<%= chat.id%>/edit">
                        
                        <button>edit</button></form>
                        <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST">
    <button>
        Delete
    </button>
</form>

                        </p>
                        <p><strong>To:</strong> <%= chat.to %></p>
                        <div class="timestamp">ðŸ“… <%= chat.created_at.toLocaleString() %></div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No chats found.</p>
            <% } %>
        </div>
    </div>

</body>
</html>
